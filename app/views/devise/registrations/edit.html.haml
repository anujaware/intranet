= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "form-horizontal"}) do |f|
  .form-heading
    %h2 My Profile
  .control-group
    = f.input :email, disabled: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    = f.input :first_name
    = f.input :last_name
    = f.input :gender, collection: ['Male', 'Female']
    .control-group
      = f.label :date_of_birth, class: 'control-label'
      .controls
        = f.date_field :date_of_birth
    = f.submit "Update", class: 'btn controls'
%h3 Delete an account
%p
  #{button_to "Delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn'}
= link_to "Back", :back
