= link_to current_user.public_profile.name, '#', 'data-toggle' => "dropdown", class: "dropdown-toggle"
%ul.dropdown-menu.drop
  - if can? :invite_user, User
    %li
      = link_to "Invite Employee", invite_user_path
  %li
    = link_to "Profile", public_profile_user_path(current_user), data: {'no-turbolink' =>  true}
  %li
    = link_to "Apply Leave", new_user_leave_application_path(current_user)
  %li.divider
  %li
    = link_to 'Sign out', destroy_user_session_path, method: :delete
