.form-heading
  %h2 All Users
.form-horizontal
  %table.table.table-hover
    %thead
      %tr
        %th 
        %th First Name
        %th Last Name
        %th Email
        %th Role
    %tbody
      %ul
        - @users.each do |user|
          %tr
            %td
              %li
            %td
              = link_to user.public_profile.first_name, user_path(user)
            %td
              = user.public_profile.last_name
            %td
              = user.email
            %td
              = user.role
            %td
              = link_to 'Edit', edit_user_path(user), class: 'btn btn-primary'

