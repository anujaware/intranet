.form-heading
  %h2 All Users
.form-horizontal
  %table.table.table-hover
    %thead
      %tr
        %th #
        %th
        %th Employee Name
        %th Email
        - if can? :edit, current_user
          %th Role
          %th Status
    %tbody
      - @users.each_with_index do |user, index|
        %tr
          %td #{index+1}
          %td= image_tag(user.public_profile.photo.url(:thumb), class: 'img-polaroid')
          - if can? :edit, current_user
            %td= link_to user.public_profile.first_name + " " + user.public_profile.last_name, user_path(user)
            %td= user.email
            %td= user.role
            %td= user.status
            %td= link_to 'Edit', public_profile_user_path(user), class: 'btn'
          - elsif user.status != 'created'
            %td= link_to user.public_profile.first_name + " " + user.public_profile.last_name, user_path(user)
            %td #{user.email}
