.form-heading
  %h2 All Users
.form-horizontal
  %table.table.table-hover
    %thead
      %tr
        %th # 
        %th Employee Name
        %th Email
        %th Role
        %th Status
    %tbody
      - @users.each_with_index do |user, index|
        %tr
          %td #{index+1}
          %td
            = link_to user.public_profile.first_name + " " + user.public_profile.last_name, user_path(user) if user.status != 'created'
          %td #{user.email}
          %td #{user.role}
          %td #{user.status}
          %td
            = link_to 'Edit', public_profile_user_path(user), class: 'btn'
