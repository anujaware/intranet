= simple_nested_form_for(@user,:url => user_path(@user), :html => { method: :put, class: "form-horizontal", multipart: true}) do |f|
  = f.fields_for :attachments do |a|
    = a.input :name
    = a.input :document
    - if a.object.persisted?
      .document
        = link_to 'Download', download_document_user_path(a.object)
        |
        = a.link_to_remove 'Remove'
  = f.link_to_add 'Add new document', :attachments, class: 'btn controls'
  = f.submit :save, class: "btn"
:css
  .document{position: relative;margin-left: 400px;top:-96px;}
